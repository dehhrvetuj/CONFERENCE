    {
        type            triSurfaceMesh;
        name            refine1;
    }
	
    refine2.stl
    {
        type            triSurfaceMesh;
        name            refine2;
    }	
}



castellatedMeshControls
{
    allowFreeStandingZoneFaces true;
    maxGlobalCells  9000000;
    maxLocalCells   3000000;
    minRefinementCells 20;
    nCellsBetweenLevels 3;
    resolveFeatureAngle 30;
    locationInMesh  ( 0 1 2 );
    features        ( { file "room.eMesh" ; level 1 ; } 
						{ file "manikin.eMesh" ; level 4 ; } 
					);

    refinementSurfaces
    {
        room
        {
            level           ( 0 1 );

            regions
            {
		
				"(FLOOR|CEILING|BACK|SIDE).*"
				{
					level (1 1);
					
					patchInfo
                    {
                        type            wall;
						inGroups (RoomWallGroup);
                    }
				}
				
				"INLET.*"
				{
					level (1 1);
					
					patchInfo
                    {
                        type            patch;
						inGroups (RoomInletGroup);
                    }
				}				

				"(OUTLET1|OUTLET2).*"
				{
					level (2 2);
					
					patchInfo
                    {
                        type            patch;
						inGroups (RoomOutletGroup);
                    }					
				}
			}
		}
				
		manikin
        {
            level           ( 4 5 );

            regions
            {		
				"manikin.*"
				{
					level (4 5);
					
					patchInfo
                    {
                        type            wall;
                    }					
				}
			}
			
		}
    }


    refinementRegions
    {

        room
        {
            mode            distance;

            levels
            (
                ( 0.08 1 )

            );

        }
	        
		manikin
        {
            mode            distance;

            levels
            (
				( 0.01 4 )
				( 0.03 3 )
				( 0.08 2 )
                ( 0.15 1 )

            );

        }
		
		// refine1
